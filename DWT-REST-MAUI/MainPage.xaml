<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DWT_REST_MAUI.MainPage"
             Title="Document Scanner">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Scan"
                     Order="Secondary"
                     Clicked="OnScanItemClicked"
                     />
        <ToolbarItem Text="Edit"
                     Order="Secondary" 
                     Clicked="OnEditItemClicked"
                     />
        <ToolbarItem Text="Settings"
                     Order="Secondary" 
                     Clicked="OnSettingsItemClicked"
                     />
        <ToolbarItem Text="Save as PDF"
             Order="Secondary" 
             Clicked="OnSaveItemClicked"
             />
    </ContentPage.ToolbarItems>
    <Grid RowDefinitions="Auto,*"
          ColumnDefinitions="*">
        <ScrollView Grid.Row="1">
            <HybridWebView x:Name="webView" />
        </ScrollView>
    </Grid>
</ContentPage>
